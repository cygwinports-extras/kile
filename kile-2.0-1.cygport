inherit kde3

DESCRIPTION="KDE LaTeX source editor"
HOMEPAGE="http://kile.sourceforge.net/"
SRC_URI="mirror://sourceforge/kile/${P}.tar.bz2"

DIFF_EXCLUDES="Makefile"

# src/kile/complete/tex/fancyunits-{UF,Uf,uf}.cwl
USE_MANAGED_MOUNT=1

src_install() {
	cd ${B}
	cyginstall

	make_managed_mount /usr/share/apps/kile/complete/tex
}
